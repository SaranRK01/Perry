{
  "manifest_version": 3,
  "name": "Government Website Detector (Direct Test)",
  "version": "1.0.0",
  "description": "Direct content script test to debug popup issues",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_test.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Government Website Detector (Direct Test)"
  }
}
